<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<StackPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="TestCreator.users.EditUser"
           fx:id="rootNode">
    <VBox alignment="CENTER" spacing="10">
        <HBox alignment="CENTER">
            <Label fx:id="usernameLabel" text="Username:"/>
        </HBox>
        <HBox alignment="CENTER">
            <Button text=" Change Password" onAction="#changePassword"/>
        </HBox>
        <HBox alignment="CENTER">
            <Label text="Email:"/>
            <TextField fx:id="emailTextField" maxWidth="400" onAction="#updateEmail" promptText="Optional"/>
        </HBox>
        <HBox alignment="CENTER" spacing="50">
            <Button fx:id="updateButton" disable="true" onAction="#updateEmail" text="Create User"/>
            <Button onAction="#returnToMainMenu" text="Cancel"/>
        </HBox>
    </VBox>
</StackPane>

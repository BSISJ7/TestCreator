<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<StackPane fx:id="rootNode" xmlns="http://javafx.com/javafx/17.0.2-ea"
           xmlns:fx="http://javafx.com/fxml/1"
           prefHeight="400.0" prefWidth="600.0"
           fx:controller="TestCreator.users.EditUser">

    <VBox alignment="CENTER" spacing="10" StackPane.alignment="CENTER">
        <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
            <Label fx:id="usernameLabel" text="Username:" />
        </HBox>
        <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
            <Button onAction="#changePassword" text="Change Password" />
        </HBox>
        <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
            <Label fx:id="emailLabel" text="Email: " />
        </HBox>
        <HBox alignment="CENTER" spacing="20" VBox.vgrow="ALWAYS">
            <Button fx:id="changeEmailButton" disable="true" onAction="#changeEmail" text="Change Email" />
            <Button fx:id="verifyEmailButton" disable="true" onAction="#verifyEmail" text="Verify Email" />
        </HBox>
        <Button onAction="#returnToMainMenu" text="Return" VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin></Button>
    </VBox>
</StackPane>

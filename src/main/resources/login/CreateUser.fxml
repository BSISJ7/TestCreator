<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml"
      xmlns="http://javafx.com/javafx"
      fx:controller="TestCreator.login.CreateUser"
      alignment="CENTER" spacing="10">

    <GridPane alignment="CENTER" hgap="10" vgap="10">
        <HBox GridPane.columnIndex="0" GridPane.rowIndex="0">
            <Label text="Username:" />
            <TextField fx:id="usernameField" promptText="Username" onAction="#addUser" maxWidth="400"/>
        </HBox>
        <HBox GridPane.columnIndex="0" GridPane.rowIndex="1">
            <Label text="Password:" />
            <PasswordField fx:id="passwordField" promptText="Password" onAction="#addUser" maxWidth="400"/>
            <TextField fx:id="passwordFieldVisible" promptText="Password" onAction="#addUser" maxWidth="400"/>
        </HBox>
        <CheckBox fx:id="passVisibleCheckBox" GridPane.columnIndex="0" GridPane.rowIndex="2">Show Password</CheckBox>
        <VBox fx:id="requirementsVBox" GridPane.columnIndex="0" GridPane.rowIndex="3">
            <Label fx:id="minLengthReqLabel"/>
            <Label fx:id="maxLengthReqLabel"/>
        </VBox>
        <HBox GridPane.columnIndex="0" GridPane.rowIndex="4">
            <Label text="Email:" />
            <TextField fx:id="emailTextField" promptText="Optional" onAction="#addUser" maxWidth="400"/>
        </HBox>
    </GridPane>
    <HBox alignment="CENTER" spacing="50">
        <Button text="Create User" fx:id="createUserButton" onAction="#addUser" disable="true"/>
        <Button text="Cancel" onAction="#goToLoginPage"/>
    </HBox>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
</VBox>

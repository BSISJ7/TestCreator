<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx"
      fx:id="passwordResetPane"
      fx:controller="TestCreator.login.PasswordResetRequest"
      alignment="CENTER" spacing="10">
<!--      stylesheets="@../css/mainStyle.css"-->

    <Label text="Please enter your email address to reset your password."/>
    <TextField fx:id="emailTextField" promptText="example@email.com" maxWidth="300"/>
    <Button text="Send" fx:id="sendButton" onAction="#sendPassResetEmail" disable="true"/>
    <Label fx:id="resetPassphraseLabel" text="Enter the reset passphrase:" visible="false"/>
    <TextField fx:id="resetPassphraseTextField" promptText="Reset Passphrase" visible="false" maxWidth="300"/>
    <HBox alignment="CENTER" spacing="10">
        <Button text="Reset" fx:id="resetButton" onAction="#resetPassword" disable="true"/>
        <Button text="Cancel" fx:id="cancelButton" onAction="#returnToLogin"/>
    </HBox>
</VBox>
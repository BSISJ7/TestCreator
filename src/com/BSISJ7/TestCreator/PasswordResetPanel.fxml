<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox xmlns="http://javafx.com/javafx" fx:id="passwordResetPane"
      fx:controller="com.BSISJ7.TestCreator.PasswordResetPanel"
      stylesheets="@css/mainStyle.css" xmlns:fx="http://javafx.com/fxml"
      alignment="CENTER" spacing="10">

    <Label text="Please enter your email address to reset your password."/>
    <TextField fx:id="emailTextField" promptText="example@email.com" maxWidth="300"/>
    <HBox alignment="CENTER" spacing="10">
        <Button text="Send" fx:id="sendButton" onAction="#sendPassResetEmail" disable="true"/>
        <Button text="Cancel" fx:id="cancelButton" onAction="#returnToLogin"/>
    </HBox>
</VBox>
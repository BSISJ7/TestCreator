<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<StackPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="TestCreator.login.CreateNewPassword"
           fx:id="rootNode">
    <VBox alignment="CENTER" spacing="10">

        <GridPane alignment="CENTER" hgap="10" vgap="10">
            <HBox GridPane.columnIndex="0" GridPane.rowIndex="0">
                <Label text="Password:"/>
                <PasswordField fx:id="passwordField" maxWidth="400" onAction="#changePassword" promptText="Password"/>
            </HBox>
            <HBox GridPane.columnIndex="0" GridPane.rowIndex="1">
                <Label text="Confirm: "/>
                <PasswordField fx:id="passwordConfirmField" maxWidth="400" onAction="#changePassword"
                               promptText="Confirm Password"/>
            </HBox>
            <VBox fx:id="requirementsVBox" GridPane.columnIndex="0" GridPane.rowIndex="2">
                <Label fx:id="matchReqLabel" text="Passwords must match."/>
                <Label fx:id="minLengthReqLabel"/>
                <Label fx:id="maxLengthReqLabel"/>
            </VBox>
          <columnConstraints>
              <ColumnConstraints/>
          </columnConstraints>
          <rowConstraints>
              <RowConstraints/>
              <RowConstraints/>
              <RowConstraints/>
          </rowConstraints>
        </GridPane>
        <HBox alignment="CENTER" spacing="50">
            <Button fx:id="changePassButton" disable="true" onAction="#changePassword" text="Change Password"/>
            <Button onAction="#goToLoginPage" text="Cancel"/>
        </HBox>
        <padding>
            <Insets bottom="20" left="20" right="20" top="20"/>
        </padding>
    </VBox>
</StackPane>

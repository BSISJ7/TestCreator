<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:id="rootNode" xmlns="http://javafx.com/javafx"
            fx:controller="TestCreator.questions.testPanels.TrueFalseTestPanel">

    <center>
        <TextArea fx:id="questionText" editable="false"/>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="20">
            <RadioButton fx:id="trueBtn" text="True"/>
            <RadioButton fx:id="falseBtn" text="False"/>
        </HBox>
    </bottom>

</BorderPane>
